<Page x:Class="FP_Task_4.View.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:FP_Task_4.View"
      mc:Ignorable="d" 
      d:DesignHeight="340" d:DesignWidth="600"
      Title="MainPage">

    <Border>
        <Grid>
            <Image Source="/Images/bg.jpg" 
                   Style="{StaticResource Background}"/>
            <StackPanel >
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="П Р О Е К Т    №4"
                           Style="{StaticResource PreviewText}"/>
            </StackPanel>

            <Button
                     Style="{StaticResource PreviewBtn}"
                     x:Name="BtnPreview"
                     Click="BtnPreview_Click"
                     Content="Н А Ж М И">
            </Button>
        </Grid>
    </Border>
</Page>
